<article class="post">
    <div class="col rank">
        <span>{{inc @index}}</span>
    </div>
    <div class="col thumbnail">
        <a href="{{url}}">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
                {{title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                submitted {{date}} ago by {{author}}
            </div>
            <div class="controls">
                <ul>
                    <li class="action"><a class="commentsLink" href="#/posts/{{_id}}/comments">comments</a></li>
                    {{#if isAuthor}}
                        <li class="action"><a class="editLink" href="#/posts/{{_id}}/edit">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#/posts/delete/{{_id}}">delete</a></li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </div>
</article>
